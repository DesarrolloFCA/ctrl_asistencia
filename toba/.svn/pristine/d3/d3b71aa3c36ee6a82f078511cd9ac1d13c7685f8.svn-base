  "type": "object",
  "properties": {
    "persona": {
      "id": "http://arai/persona",
      "type": "integer"
    },
    "nacionalidad": {
      "id": "http://arai/nacionalidad",
      "type": "integer"
    },
    "fisica_o_juridica": {
      "id": "http://arai/fisica_o_juridica",
	  "maxLength": 1,
      "type": "string"
    },
    "razon_social": {
      "id": "http://arai/razon_social",
	  "maxLength": 120,
      "type": "string"
    },
    "nombre_fantasia": {
      "id": "http://arai/nombre_fantasia",
	  "maxLength": 120,
      "type": "string"
    },
    "sexo": {
      "id": "http://arai/sexo",
