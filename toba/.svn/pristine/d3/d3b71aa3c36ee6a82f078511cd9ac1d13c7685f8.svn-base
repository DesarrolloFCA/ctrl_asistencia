      "type": "string"
    },
    "email": {
      "id": "http://arai/email",
	  "maxLength": 40,
      "type": "string"
    },
    "cbu": {
      "id": "http://arai/cbu",
      "maxLength": 22,
	  "type": "string"	  
    },
    "estado": {
      "id": "http://arai/estado",
	  "maxLength": 2,
      "type": "string"
    },
    "tipo_persona": {
      "id": "http://arai/tipo_persona",	  
      "type": "integer"
    },
    "url": {
      "id": "http://arai/url",
	  "maxLength": 255,
      "type": "string"
    },
    "tel_cel": {
      "id": "http://arai/tel_cel",
	  "maxLength": 20,
      "type": "string"
    },
    "rubros": {
      "id": "http://arai/rubros",
      "type": "array",
      "items": {
        "id": "http://arai/rubros/0",
        "type": "object",
        "properties": {
          "rubro": {
            "id": "http://arai/rubros/0/rubro",
            "type": "integer"
          }
        }
      }
    },
    "documentos": {
      "id": "http://arai/documentos",
      "type": "array",
      "items": {
        "id": "http://arai/documentos/0",
        "type": "object",
        "properties": {
          "numero": {
            "id": "http://arai/documentos/0/numero",
            "maxLength": 20,
            "type": "string"
          },
          "tipo_doc": {
            "id": "http://arai/documentos/0/tipo_doc",
            "maxLength": 20,
            "type": "string"
          }
        }
      }
    },
    "domicilios": {
      "id": "http://arai/domicilios",
      "type": "array",
      "items": {
        "id": "http://arai/domicilios/0",
        "type": "object",
        "properties": {
          "rol": {
            "id": "http://arai/domicilios/0/rol",
            "maxLength": 8,
            "type": "string"
          },
          "domicilio": {
            "id": "http://arai/domicilios/0/domicilio",
            "type": "integer"
          }
